<Layout title="Contact Us">
  <div class="bg-beige pt-[13.125rem] text-center pb-[4.625rem] bg">
    <h2 class="text-[2.8125rem] font-bold text-white underline">
      Make an Impact with Us!
    </h2>
  </div>
  <!-- Food Waste is BIGGER than you think! -->

  <!-- CTA -->
  <div class="bg-white ~px-[1rem]/[5rem] ~py-[3rem]/[3.75rem]">
    <Inner>
      <h3
        class="text-green text-[2.8125rem] font-bold leading-none text-center"
      >
        Food Waste is BIGGER than you think!
      </h3>

      <div class="flex justify-between items-center mt-[3rem]">
        <Image
          src={image1}
          alt="Lin QingHui"
          width={480}
          height={282}
          class="w-[38.21%]"
        />

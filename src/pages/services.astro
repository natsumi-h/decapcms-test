---

<Layout title="Our Services">
  <div class="bg-beige pt-[13.125rem] text-center pb-[4.625rem] bg">
    <h2 class="text-[2.8125rem] font-bold text-white underline">
      Our Services
    </h2>
  </div>

  <!-- Categories -->
  <Category category={categoryData} />

  <!-- Services -->
  <div class="bg-beige ~px-[1rem]/[5rem] ~py-[3rem]/[3.75rem]">
    <Inner>
      <h2 class="text-[2.8125rem] leading-normal font-bold text-green">
        Our Services
      </h2>
      <!-- Cards Wrapper -->
      <div class="mt-[1.4375rem]">
        <!-- Card1 -->
        <div>
          <!-- tag -->
          <div
            class="bg-orange p-[1.25rem] text-white font-bold inline-block text-[1.875rem] tagradius"
          >
            <div class="flex items-center gap-x-[1.2rem]">
              <Image src={icon1} alt="icon1" width={44.76} />
              <p>Waste Management</p>
            </div>
          </div>

          <!-- div -->
          <div class="py-[2.5rem] px-[4rem] bg-white drop-shadow-md radius">
            <p class="font-bold text-[1.875rem] text-green">
              What is Waste Management?
            </p>
            <p class="mt-[0.5rem]">
              A waste management system is a streamlined process that
              organizations use to dispose of, reduce, reuse, and prevent waste.
            </p>
            <p
              class="font-bold text-[1.875rem] text-green text-center mt-[1.5rem]"
            >
              Our ALL-in-1 Smart Management Approach
            </p>
            <!-- Cards -->
            <div
              class="mt-[1.25rem] flex items-center flex-wrap justify-between gap-y-[1.875rem]"
            >
              <!-- Card -->
              {
                wastemanagementData.map((data: any) => (
                  <div class="w-[20.625rem] cardwidth">
                    <Image
                      src={data.image}
                      alt="icon1"
                      width={90}
                      height={90}
                      class="mx-auto"
                    />
                    <p class="mt-[2rem] text-[1.25rem]">{data.desctiprion}</p>
                  </div>
                ))
              }
            </div>
          </div>
        </div>

        <!-- Card2 -->
        <div>
          <!-- tag -->
          <div
            class="bg-orange p-[1.25rem] text-white font-bold inline-block text-[1.875rem] tagradius"
          >
            <div class="flex items-center gap-x-[1.2rem]">
              <Image src={icon1} alt="icon1" width={44.76} />
              <p>Waste Management</p>
            </div>
          </div>

          <!-- div -->
          <div class="py-[2.5rem] px-[4rem] bg-white drop-shadow-md radius">
            <p class="font-bold text-[1.875rem] text-green">
              What is Waste Management?
            </p>
            <p class="mt-[0.5rem]">
              A waste management system is a streamlined process that
              organizations use to dispose of, reduce, reuse, and prevent waste.
            </p>
            <p
              class="font-bold text-[1.875rem] text-green text-center mt-[1.5rem]"

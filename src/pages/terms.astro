      <ul class="flex gap-x-[0.875rem] items-center">
        <li>
          <Button text="T&C" href="#terms" />
        </li>
        <li>
          <Button text="Privacy" href="#privacy" />
        </li>
        <li>
          <Button text="Cookies" href="#cookies" />
        </li>
      </ul>
    </nav>
  </Section>


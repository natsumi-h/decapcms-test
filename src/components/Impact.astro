---
import { Image } from "astro:assets";
import Inner from "./Inner.astro";

const { impact } = Astro.props;
---

<div class="text-white bg-green ~px-[1rem]/[5rem] ~py-[3rem]/[3.75rem]">
  <Inner>
    <h2 class="text-[2.8125rem] leading-normal font-bold">Our Impact</h2>
    <div class="flex justify-between align-middle text-center mt-[1.25rem]">
      {
        impact.map((item: any) => (
          <div>
            <Image
              src={item.image}
              alt="Our Impact"
              width={100}
              height={100}
              class="mx-auto"
            />
            <p class="text-[4.6875rem] font-bold leading-normal">
              {item.number}
            </p>
            <p class="text-[1.875rem] font-bold leading-none">{item.title}</p>
          </div>
        ))
      }
    </div>

    <div class="flex justify-center mt-[2.3125rem]">
      <a
        href="/education"
        class="bg-white text-green ~px-[1.25rem]/[2.5rem] ~py-[0.625rem]/[1.25rem] rounded-full font-bold border-[0.1875rem] border-green2"
      >
        Learn more
      </a>
    </div>
  </Inner>
</div>
